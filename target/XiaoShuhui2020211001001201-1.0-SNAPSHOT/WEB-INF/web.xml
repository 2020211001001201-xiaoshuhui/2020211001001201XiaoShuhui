    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/admin/addProduct</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file><!-- when you run app - first request send to home ...HomeServlet-->
    </welcome-file-list>
    <!-- chain of filter -->
    <!--1st-->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.XiaoShuhui.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/Hello</url-pattern><!--url of HelloServlet-this filter is only for HelloServlet-->
    </filter-mapping>
    <!--2nd-write after 1st one in web.xml-->
    <filter>
        <filter-name>HelloFilter</filter-name>
        <filter-class>com.XiaoShuhui.filter.HelloFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HelloFilter</filter-name>
        <url-pattern>/Hello</url-pattern><!--url of HelloServlet-this filter is only for HelloServlet-->
    </filter-mapping>
    <!--3rd one-->
    <filter>
        <filter-name>LoggerFilter</filter-name>
        <filter-class>com.XiaoShuhui.filter.LoggerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggerFilter</filter-name>
        <url-pattern>/Hello</url-pattern><!--url of HelloServlet-this filter is only for HelloServlet-->
    </filter-mapping>


